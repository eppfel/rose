<h2 class="ui dividing header">
  <i class="settings icon"></i>
  <div class="content">
    {{t "comments.title"}}
    <div class="sub header">{{t "comments.subtitle"}}</div>
  </div>
</h2>

{{#if pagedContent}}
  {{page-numbers  content=pagedContent
                  numPagesToShow=5
                  showFL=true}}
{{/if}}

<div class="ui comments">
  {{#each pagedContent as |comment|}}
    {{rose-comment model=comment}}
  {{else}}
    {{no-data-message}}
  {{/each}}
</div>

